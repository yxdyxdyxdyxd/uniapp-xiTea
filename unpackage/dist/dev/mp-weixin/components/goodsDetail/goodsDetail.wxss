.goods-detail {
  background-color: #fff;
  width: 90vw;
}
.goods-detail .header {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  z-index: 11;
  padding: 20rpx 30rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: end;
  -webkit-justify-content: flex-end;
          justify-content: flex-end;
}
.goods-detail .header image {
  width: 60rpx;
  height: 60rpx;
}
.goods-detail .header image:nth-child(1) {
  margin-right: 30rpx;
}
.goods-detail .swiper {
  height: 426rpx;
}
.goods-detail .swiper-img {
  width: 100%;
  height: 100%;
}
.goods-detail .content {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  font-size: 24rpx;
  color: #999;
  min-height: 1vh;
  max-height: calc(100vh - 100rpx - 426rpx - 250rpx);
}
.goods-detail .content .wrapper {
  width: 100%;
  height: 100%;
  overflow: hidden;
  padding: 30rpx 30rpx 20rpx;
}
.goods-detail .content .title {
  font-size: 36rpx;
  color: #999;
  font-weight: 500;
  margin-bottom: 10rpx;
}
.goods-detail .content .labels {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  font-size: 20rpx;
  margin-bottom: 10rpx;
  overflow: hidden;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
}
.goods-detail .content .labels .label {
  max-width: 40%;
  padding: 6rpx 10rpx;
  margin-right: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.goods-detail .content .describe {
  margin-bottom: 10rpx;
}
.goods-detail .content .describe-text {
  margin-bottom: 20rpx;
}
.goods-detail .content .materials {
  width: 80%;
  margin-bottom: 20rpx;
}
.goods-detail .content .materials .group-name {
  padding: 10rpx 0;
}
.goods-detail .content .materials .values {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
  overflow: hidden;
}
.goods-detail .content .materials .value {
  background-color: #f5f5f7;
  color: #343434;
  padding: 10rpx 20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 12rpx;
}
.goods-detail .content .materials .selected {
  background-color: #dba871;
  color: #fff;
}
.goods-detail .bottom {
  padding: 20rpx 40rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  border-top: 1rpx solid rgba(200, 199, 204, 0.3);
}
.goods-detail .bottom .align-items-center {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.goods-detail .bottom .price-and-materials {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  overflow: hidden;
  margin-right: 10rpx;
}
.goods-detail .bottom .price {
  color: #dba871;
  font-size: 36rpx;
  font-weight: bold;
}
.goods-detail .bottom .bottom-materials {
  font-size: 24rpx;
  color: #999;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.goods-detail .bottom .add-cart {
  width: 100%;
  margin-top: 20rpx;
  font-size: 32rpx;
  border-radius: 6rpx;
  background-color: #dba871;
  color: #fff;
}

