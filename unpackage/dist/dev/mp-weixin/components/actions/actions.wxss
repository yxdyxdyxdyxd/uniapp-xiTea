.actions {
  margin-right: 20rpx;
}
.actions .addDel {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.actions .addDel .btn {
  width: 44rpx;
  height: 44rpx;
}
.actions .addDel .number {
  width: 44rpx;
  height: 44rpx;
  margin: 0 20rpx;
  text-align: center;
  line-height: 44rpx;
  font-size: 36rpx;
}
.actions .select {
  position: relative;
}
.actions .select .select-btn {
  border-radius: 50rpx;
  background-color: #dba871;
  font-size: 26rpx;
  color: #fff;
}
.actions .select .badge-number {
  position: absolute;
  right: -16rpx;
  top: -14rpx;
  border-radius: 100%;
  width: 1.1rem;
  height: 1.1rem;
  background-color: #dba871;
  border: 2rpx solid #fff;
  text-align: center;
  line-height: 1.1rem;
  font-size: 20rpx;
  color: #fff;
}

